{
    "manifest_version": 3,
    "name": "MindStack",
    "version": "1.0",
    "description": "StackMind turns your browser into a private AI memory: it auto-captures what you learn from docs or Stack Overflow, summarizes it with on-device AI, and recalls it the next time you hit a similar error - even in your console, even offline.",
    "action": {
        "default_popup": "index.html"
    },
    "omnibox": {
        "keyword": "ms"
    },
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus",
        "notifications",
        "scripting",
        "omnibox"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}